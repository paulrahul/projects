{
  "name": "Tabahi",
  "version": "1.0",
  "description": "Control the Tabs' tabahi",
  "background": {
    "scripts": [
      "background.js",
      "tabs.js",
      "tabs_cache.js",
      "tabs_store.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/tabahi-32bits-16.png",
      "32": "images/tabahi-32bits-32.png",
      "48": "images/tabahi-32bits-48.png",
      "128": "images/tabahi-32bits-128.png"
    },
    "default_title": "Tabahi!"
  },
  "icons": {
    "16": "images/tabahi-32bits-16.png",
    "32": "images/tabahi-32bits-32.png",
    "48": "images/tabahi-32bits-48.png",
    "128": "images/tabahi-32bits-128.png"
  },
  "permissions": ["storage", "tabs"],
  "manifest_version": 2
}